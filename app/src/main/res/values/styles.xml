<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--底補導航字體與大小-->
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/matchuppro</item>
        <item name="android:textSize">24dp</item>
    </style>

<!--    Toolbar Title 大小與顏色-->
    <style name="tool_bar_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">@color/Brown</item>
        <item name="colorControlNormal">@color/Brown</item>
        <item name="android:fontFamily">@font/matchuppro</item>
        <item name="actionMenuTextColor">@color/Brown</item>
    </style>

<!--Toolbar與Menu顏色與大小 不知道為啥這個存在才能改Title顏色-->
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--更改Toolbar所有文字的大小-->
        <item name="android:textSize">20dp</item>
        <!--設定Menu視窗不覆蓋到Toolbar-->
        <item name="overlapAnchor">false</item>
    </style>

<!--food popup-->
    <style name="font_style">
        <item name="android:textSize">48dp</item>
        <item name="fontFamily">@font/silver</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Brown</item>
    </style>

    <!--States text-->
    <style name="states_style">
        <item name="android:textSize">36dp</item>
        <item name="fontFamily">@font/silver</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/set_brown</item>
    </style>

    <!--States text-->
    <style name="states_int_style">
        <item name="android:textSize">30dp</item>
        <item name="fontFamily">@font/silver</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--換衣服pop字體-->
    <style name="font_wear_pop">
        <item name="android:textSize">48dp</item>
        <item name="fontFamily">@font/silver</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--DEV字體-->
    <style name="font_dev_pop">
        <item name="android:textSize">48dp</item>
        <item name="fontFamily">@font/cubic</item>
        <item name="android:textColor">@color/Brown</item>
    </style>
</resources>